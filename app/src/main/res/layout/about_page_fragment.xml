<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clickable="true"
  android:focusable="true">

  <androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="470dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/secondaryColor"
    app:cardCornerRadius="16dp">


    <androidx.constraintlayout.widget.ConstraintLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="350dp"
      android:layout_height="450dp"
      android:layout_gravity="center"
      android:background="@color/primaryDarkColor"
      android:elevation="3dp">

      <TextView
        android:id="@+id/title"
        style="@style/bigCardStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Shaker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

      <TextView
        android:id="@+id/info"
        style="@style/bigCardStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shaker was created as an educational project at CNM's Deep Dive Coding. Shaker gets its data from The The United States Geological Survey through their API. For more information about the USGS and their data please visit their site linked at the bottom of this page. Shaker was created under the Apache License 2.0. "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

      <TextView
        android:id="@+id/usgs_link"
        style="@style/bigCardStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

      <TextView
        android:id="@+id/lic_link"
        style="@style/bigCardStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>
</FrameLayout>